@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-body text-center py-5">
                <i class="bi bi-shield-exclamation text-danger" style="font-size: 64px;"></i>
                <h2 class="mt-3 text-danger">Acceso Denegado</h2>
                <p class="text-muted mb-4">
                    No tiene permisos para acceder a esta seccion.<br/>
                    Contacte al administrador si cree que esto es un error.
                </p>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house me-1"></i>Ir al Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
