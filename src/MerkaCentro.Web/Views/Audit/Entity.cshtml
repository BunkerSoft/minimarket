@model IReadOnlyList<MerkaCentro.Application.Services.AuditLogDto>
@{
    ViewData["Title"] = "Historial de Entidad";
    var entityType = ViewBag.EntityType as string;
    var entityId = ViewBag.EntityId as Guid?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-clock-history me-2"></i>Historial: @entityType
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="alert alert-info">
    <strong>Entidad:</strong> @entityType <br/>
    <strong>ID:</strong> @entityId
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Usuario</th>
                    <th>Accion</th>
                    <th>Cambios</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    var actionBadge = log.Action switch
                    {
                        "Create" => "bg-success",
                        "Update" => "bg-primary",
                        "Delete" => "bg-danger",
                        _ => "bg-secondary"
                    };
                    <tr>
                        <td>@log.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@(log.UserName ?? "Sistema")</td>
                        <td><span class="badge @actionBadge">@log.Action</span></td>
                        <td>
                            @if (!string.IsNullOrEmpty(log.NewValues))
                            {
                                <small class="text-muted">@log.NewValues[..Math.Min(100, log.NewValues.Length)]...</small>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
