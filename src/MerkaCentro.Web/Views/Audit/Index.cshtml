@model MerkaCentro.Application.Common.PagedResult<MerkaCentro.Application.Services.AuditLogDto>
@{
    ViewData["Title"] = "Auditoria";
    var entityType = ViewBag.EntityType as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-journal-text me-2"></i>Registro de Auditoria
    </h1>
    <form asp-action="Cleanup" method="post" class="d-inline">
        <input type="hidden" name="daysToKeep" value="90" />
        <button type="submit" class="btn btn-outline-warning" onclick="return confirm('Â¿Eliminar logs anteriores a 90 dias?')">
            <i class="bi bi-trash me-1"></i>Limpiar Antiguos
        </button>
    </form>
</div>

<!-- Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Tipo de Entidad</label>
                <select name="entityType" class="form-select">
                    <option value="">Todos</option>
                    <option value="Product" selected="@(entityType == "Product")">Productos</option>
                    <option value="Sale" selected="@(entityType == "Sale")">Ventas</option>
                    <option value="Customer" selected="@(entityType == "Customer")">Clientes</option>
                    <option value="CashRegister" selected="@(entityType == "CashRegister")">Caja</option>
                    <option value="Expense" selected="@(entityType == "Expense")">Gastos</option>
                    <option value="PurchaseOrder" selected="@(entityType == "PurchaseOrder")">Compras</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filtrar</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Usuario</th>
                    <th>Entidad</th>
                    <th>Accion</th>
                    <th>IP</th>
                    <th class="text-end">Detalles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Items)
                {
                    var actionBadge = log.Action switch
                    {
                        "Create" => "bg-success",
                        "Update" => "bg-primary",
                        "Delete" => "bg-danger",
                        _ => "bg-secondary"
                    };
                    <tr>
                        <td>
                            <small>@log.CreatedAt.ToString("dd/MM/yyyy")</small><br/>
                            <small class="text-muted">@log.CreatedAt.ToString("HH:mm:ss")</small>
                        </td>
                        <td>@(log.UserName ?? "Sistema")</td>
                        <td>
                            @log.EntityType<br/>
                            <small class="text-muted">@log.EntityId.ToString()[..8]...</small>
                        </td>
                        <td>
                            <span class="badge @actionBadge">@log.Action</span>
                        </td>
                        <td><small>@(log.IpAddress ?? "-")</small></td>
                        <td class="text-end">
                            <button type="button" class="btn btn-sm btn-outline-info"
                                    data-bs-toggle="modal"
                                    data-bs-target="#logModal"
                                    data-old="@log.OldValues"
                                    data-new="@log.NewValues">
                                <i class="bi bi-eye"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-entityType="@entityType">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<!-- Modal -->
<div class="modal fade" id="logModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalles del Cambio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Valores Anteriores</h6>
                        <pre id="oldValues" class="bg-light p-2 rounded" style="max-height: 300px; overflow: auto;"></pre>
                    </div>
                    <div class="col-md-6">
                        <h6>Valores Nuevos</h6>
                        <pre id="newValues" class="bg-light p-2 rounded" style="max-height: 300px; overflow: auto;"></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('logModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var oldValues = button.getAttribute('data-old');
            var newValues = button.getAttribute('data-new');

            try {
                document.getElementById('oldValues').textContent = oldValues ? JSON.stringify(JSON.parse(oldValues), null, 2) : '-';
            } catch {
                document.getElementById('oldValues').textContent = oldValues || '-';
            }

            try {
                document.getElementById('newValues').textContent = newValues ? JSON.stringify(JSON.parse(newValues), null, 2) : '-';
            } catch {
                document.getElementById('newValues').textContent = newValues || '-';
            }
        });
    </script>
}
