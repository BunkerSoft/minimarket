@model MerkaCentro.Application.DTOs.CashRegisterDto
@{
    ViewData["Title"] = "Caja Actual";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-cash-stack me-2"></i>Caja Actual
        <span class="badge bg-success ms-2">Abierta</span>
    </h1>
    <div>
        <a asp-controller="Sales" asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-cart-plus me-1"></i>Nueva Venta
        </a>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-8">
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card stats-card">
                        <div class="card-body text-center">
                            <div class="stats-value">S/ @Model.InitialCash.ToString("N2")</div>
                            <div class="stats-label">Efectivo Inicial</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stats-card success">
                        <div class="card-body text-center">
                            <div class="stats-value">S/ @Model.Summary.TotalSales.ToString("N2")</div>
                            <div class="stats-label">Ventas (@Model.Summary.SalesCount)</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stats-card">
                        <div class="card-body text-center">
                            <div class="stats-value">S/ @Model.ExpectedCash.ToString("N2")</div>
                            <div class="stats-label">Efectivo Esperado</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-list-ul me-2"></i>Resumen de Movimientos
                </div>
                <div class="card-body">
                    <table class="table table-sm mb-0">
                        <tbody>
                            <tr>
                                <td><i class="bi bi-arrow-up-circle text-success me-2"></i>Depositos</td>
                                <td class="text-end text-success">+ S/ @Model.Summary.TotalDeposits.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><i class="bi bi-arrow-down-circle text-danger me-2"></i>Retiros</td>
                                <td class="text-end text-danger">- S/ @Model.Summary.TotalWithdrawals.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><i class="bi bi-receipt text-warning me-2"></i>Gastos</td>
                                <td class="text-end text-warning">- S/ @Model.Summary.TotalExpenses.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><i class="bi bi-credit-card text-info me-2"></i>Pagos de Credito</td>
                                <td class="text-end text-info">+ S/ @Model.Summary.TotalCreditPayments.ToString("N2")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <i class="bi bi-arrow-up-circle me-2"></i>Registrar Deposito
                        </div>
                        <div class="card-body">
                            <form asp-action="Deposit" asp-route-id="@Model.Id" method="post">
                                <div class="mb-3">
                                    <label class="form-label">Monto</label>
                                    <div class="input-group">
                                        <span class="input-group-text">S/</span>
                                        <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Descripcion</label>
                                    <input type="text" name="description" class="form-control" required
                                           placeholder="Ej: Cambio adicional" />
                                </div>
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-plus-lg me-1"></i>Registrar Deposito
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-warning text-dark">
                            <i class="bi bi-arrow-down-circle me-2"></i>Registrar Retiro
                        </div>
                        <div class="card-body">
                            <form asp-action="Withdrawal" asp-route-id="@Model.Id" method="post">
                                <div class="mb-3">
                                    <label class="form-label">Monto</label>
                                    <div class="input-group">
                                        <span class="input-group-text">S/</span>
                                        <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Descripcion</label>
                                    <input type="text" name="description" class="form-control" required
                                           placeholder="Ej: Pago a proveedor" />
                                </div>
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="bi bi-dash-lg me-1"></i>Registrar Retiro
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Informacion
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Usuario</dt>
                        <dd>@Model.UserName</dd>

                        <dt>Apertura</dt>
                        <dd>@Model.OpenedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt>Tiempo Abierta</dt>
                        <dd>
                            @{
                                var duration = DateTime.Now - Model.OpenedAt;
                                @($"{(int)duration.TotalHours}h {duration.Minutes}m")
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card bg-danger text-white">
                <div class="card-header">
                    <i class="bi bi-box-arrow-right me-2"></i>Cerrar Caja
                </div>
                <div class="card-body">
                    <form asp-action="Close" asp-route-id="@Model.Id" method="post"
                          onsubmit="return confirm('Â¿Esta seguro de cerrar la caja? Cuente el efectivo antes de continuar.');">
                        <div class="mb-3">
                            <label class="form-label">Efectivo Contado</label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input type="number" name="countedCash" class="form-control" step="0.01" min="0" required
                                       value="@Model.ExpectedCash.ToString("0.00")" />
                            </div>
                            <small>Esperado: S/ @Model.ExpectedCash.ToString("N2")</small>
                        </div>
                        <button type="submit" class="btn btn-light w-100">
                            <i class="bi bi-box-arrow-right me-1"></i>Cerrar Caja
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
