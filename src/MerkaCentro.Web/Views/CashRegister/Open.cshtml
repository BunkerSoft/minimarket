@{
    ViewData["Title"] = "Abrir Caja";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <i class="bi bi-box-arrow-in-right me-2"></i>Abrir Caja
            </div>
            <div class="card-body">
                <form asp-action="Open" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="text-center mb-4">
                        <i class="bi bi-cash-stack display-1 text-success"></i>
                        <h4 class="mt-3">Apertura de Caja</h4>
                        <p class="text-muted">Ingrese el monto inicial en efectivo</p>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Efectivo Inicial <span class="text-danger">*</span></label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">S/</span>
                            <input type="number" name="initialCash" class="form-control form-control-lg text-end"
                                   step="0.01" min="0" value="0.00" required />
                        </div>
                        <small class="text-muted">Cuente el efectivo y registre el monto exacto</small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-lg me-1"></i>Abrir Caja
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
