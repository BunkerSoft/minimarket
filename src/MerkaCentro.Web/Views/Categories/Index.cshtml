@model IEnumerable<MerkaCentro.Application.DTOs.CategoryDto>
@{
    ViewData["Title"] = "Categorias";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-tags me-2"></i>Categorias
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Nueva Categoria
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@category.Name</td>
                            <td class="text-muted">@(category.Description ?? "-")</td>
                            <td>
                                @if (category.IsActive)
                                {
                                    <span class="badge bg-success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactiva</span>
                                }
                            </td>
                            <td class="table-actions text-center">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="ToggleStatus" asp-route-id="@category.Id" method="post" class="d-inline">
                                    <input type="hidden" name="activate" value="@(!category.IsActive)" />
                                    @if (category.IsActive)
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="Desactivar">
                                            <i class="bi bi-pause-circle"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Activar">
                                            <i class="bi bi-play-circle"></i>
                                        </button>
                                    }
                                </form>
                                <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Â¿Esta seguro de eliminar esta categoria?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            No hay categorias registradas
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
