@model MerkaCentro.Application.DTOs.CreateCustomerDto
@{
    ViewData["Title"] = "Nuevo Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-person-plus me-2"></i>Nuevo Cliente
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nombre <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="Nombre completo del cliente" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="DocumentType" class="form-label">Tipo Documento</label>
                            <select asp-for="DocumentType" class="form-select">
                                <option value="">-- Seleccione --</option>
                                <option value="@MerkaCentro.Domain.Enums.DocumentType.DNI">DNI</option>
                                <option value="@MerkaCentro.Domain.Enums.DocumentType.RUC">RUC</option>
                                <option value="@MerkaCentro.Domain.Enums.DocumentType.CE">Carnet de Extranjeria</option>
                            </select>
                            <span asp-validation-for="DocumentType" class="text-danger"></span>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label asp-for="DocumentNumber" class="form-label">Numero de Documento</label>
                            <input asp-for="DocumentNumber" class="form-control" placeholder="DNI, RUC o CE" />
                            <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label">Telefono</label>
                            <input asp-for="Phone" class="form-control" placeholder="999 999 999" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Correo Electronico</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="correo@ejemplo.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />
                    <h6 class="text-muted mb-3"><i class="bi bi-geo-alt me-1"></i>Direccion</h6>

                    <div class="mb-3">
                        <label asp-for="Street" class="form-label">Calle / Avenida</label>
                        <input asp-for="Street" class="form-control" placeholder="Av. Principal 123" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="District" class="form-label">Distrito</label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label">Ciudad</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Reference" class="form-label">Referencia</label>
                        <input asp-for="Reference" class="form-control" placeholder="Cerca de..." />
                        <span asp-validation-for="Reference" class="text-danger"></span>
                    </div>

                    <hr />
                    <h6 class="text-muted mb-3"><i class="bi bi-credit-card me-1"></i>Credito</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CreditLimit" class="form-label">Limite de Credito</label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input asp-for="CreditLimit" class="form-control" type="number" step="0.01" min="0" value="0" />
                            </div>
                            <small class="text-muted">0 = Sin credito</small>
                            <span asp-validation-for="CreditLimit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notas</label>
                        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <hr />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Guardar Cliente
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
