@model MerkaCentro.Application.DTOs.CustomerDto
@{
    ViewData["Title"] = Model?.Name ?? "Detalle de Cliente";
    var statusClass = Model?.Status == MerkaCentro.Domain.Enums.CustomerStatus.Active ? "bg-success" :
                      Model?.Status == MerkaCentro.Domain.Enums.CustomerStatus.Inactive ? "bg-secondary" : "bg-danger";
    var statusText = Model?.Status == MerkaCentro.Domain.Enums.CustomerStatus.Active ? "Activo" :
                     Model?.Status == MerkaCentro.Domain.Enums.CustomerStatus.Inactive ? "Inactivo" : "Bloqueado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-person me-2"></i>@Model?.Name
        <span class="badge @statusClass ms-2">@statusText</span>
    </h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Informacion del Cliente
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl>
                                <dt>Nombre</dt>
                                <dd>@Model.Name</dd>

                                <dt>Documento</dt>
                                <dd>
                                    @if (!string.IsNullOrEmpty(Model.DocumentNumber))
                                    {
                                        <span class="badge bg-secondary me-1">@Model.DocumentType</span>@Model.DocumentNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">No registrado</span>
                                    }
                                </dd>

                                <dt>Telefono</dt>
                                <dd>@(Model.Phone ?? "-")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl>
                                <dt>Correo Electronico</dt>
                                <dd>@(Model.Email ?? "-")</dd>

                                <dt>Direccion</dt>
                                <dd>@(string.IsNullOrEmpty(Model.Address) ? "-" : Model.Address)</dd>

                                <dt>Cliente desde</dt>
                                <dd>@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr />
                        <dt>Notas</dt>
                        <dd class="text-muted">@Model.Notes</dd>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-credit-card me-2"></i>Estado de Cuenta
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="text-muted small">Limite de Credito</div>
                            <div class="fs-4 fw-bold text-primary">S/ @Model.CreditLimit.ToString("N2")</div>
                        </div>
                        <div class="col-6">
                            <div class="text-muted small">Deuda Actual</div>
                            <div class="fs-4 fw-bold @(Model.CurrentDebt > 0 ? "text-danger" : "text-success")">
                                S/ @Model.CurrentDebt.ToString("N2")
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="text-center">
                        <div class="text-muted small">Credito Disponible</div>
                        <div class="fs-3 fw-bold text-success">S/ @Model.AvailableCredit.ToString("N2")</div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <i class="bi bi-gear me-2"></i>Acciones
                </div>
                <div class="card-body">
                    <form asp-action="SetCreditLimit" asp-route-id="@Model.Id" method="post" class="mb-3">
                        <label class="form-label">Modificar Limite de Credito</label>
                        <div class="input-group">
                            <span class="input-group-text">S/</span>
                            <input type="number" name="creditLimit" class="form-control" step="0.01" min="0"
                                   value="@Model.CreditLimit" />
                            <button type="submit" class="btn btn-warning">Actualizar</button>
                        </div>
                    </form>

                    <hr />

                    @if (Model.Status == MerkaCentro.Domain.Enums.CustomerStatus.Active)
                    {
                        <form asp-action="Block" asp-route-id="@Model.Id" method="post" class="mb-2">
                            <div class="mb-2">
                                <input type="text" name="reason" class="form-control form-control-sm"
                                       placeholder="Razon del bloqueo (opcional)" />
                            </div>
                            <button type="submit" class="btn btn-danger w-100"
                                    onclick="return confirm('¿Esta seguro de bloquear este cliente?');">
                                <i class="bi bi-slash-circle me-1"></i>Bloquear Cliente
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle me-1"></i>Activar Cliente
                            </button>
                        </form>
                    }

                    @if (Model.CurrentDebt == 0)
                    {
                        <hr />
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                              onsubmit="return confirm('¿Esta seguro de eliminar este cliente? Esta accion no se puede deshacer.');">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash me-1"></i>Eliminar Cliente
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
}
