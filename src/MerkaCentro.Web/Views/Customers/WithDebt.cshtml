@model IEnumerable<MerkaCentro.Application.DTOs.CustomerDebtDto>
@{
    ViewData["Title"] = "Clientes con Deuda";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-exclamation-triangle me-2"></i>Clientes con Deuda
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Ver Todos
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Hay <strong>@Model.Count()</strong> clientes con deuda pendiente por un total de
        <strong>S/ @Model.Sum(c => c.CurrentDebt).ToString("N2")</strong>
    </div>
}

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Documento</th>
                    <th class="text-end">Limite Credito</th>
                    <th class="text-end">Deuda Actual</th>
                    <th class="text-center">Ultima Compra</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var customer in Model.OrderByDescending(c => c.CurrentDebt))
                    {
                        var debtPercentage = customer.CreditLimit > 0
                            ? (customer.CurrentDebt / customer.CreditLimit) * 100
                            : 100;
                        var debtClass = debtPercentage >= 90 ? "text-danger" :
                                       debtPercentage >= 70 ? "text-warning" : "";
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@customer.Id" class="text-decoration-none fw-semibold">
                                    @customer.Name
                                </a>
                            </td>
                            <td>@(customer.DocumentNumber ?? "-")</td>
                            <td class="text-end">S/ @customer.CreditLimit.ToString("N2")</td>
                            <td class="text-end">
                                <span class="@debtClass fw-bold">S/ @customer.CurrentDebt.ToString("N2")</span>
                                @if (customer.CreditLimit > 0)
                                {
                                    <br />
                                    <small class="text-muted">@debtPercentage.ToString("N0")% del limite</small>
                                }
                            </td>
                            <td class="text-center">
                                @if (customer.LastPurchaseDate.HasValue)
                                {
                                    @customer.LastPurchaseDate.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="table-actions text-center">
                                <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-info" title="Ver Detalle">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="bi bi-check-circle fs-1 d-block mb-2 text-success"></i>
                            No hay clientes con deuda pendiente
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
