@model MerkaCentro.Application.Services.DashboardDto
@{
    ViewData["Title"] = "Dashboard";
    var syncStatus = ViewBag.SyncStatus as MerkaCentro.Application.Services.SyncStatusDto;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-speedometer2 me-2"></i>Dashboard
    </h1>
    @if (syncStatus != null)
    {
        <div class="d-flex align-items-center">
            @if (syncStatus.IsOnline)
            {
                <span class="badge bg-success me-2"><i class="bi bi-wifi me-1"></i>Online</span>
            }
            else
            {
                <span class="badge bg-warning text-dark me-2"><i class="bi bi-wifi-off me-1"></i>Offline</span>
            }
            @if (syncStatus.PendingCount > 0)
            {
                <span class="badge bg-info">@syncStatus.PendingCount pendientes</span>
            }
        </div>
    }
</div>

@if (Model != null)
{
    <!-- KPIs Row 1 -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Ventas Hoy</h6>
                            <h2 class="mb-0">S/ @Model.TodaySales.ToString("N2")</h2>
                            <small>@Model.TodayTransactions transacciones</small>
                        </div>
                        <i class="bi bi-cart-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Ventas del Mes</h6>
                            <h2 class="mb-0">S/ @Model.MonthSales.ToString("N2")</h2>
                            <small>@Model.MonthTransactions transacciones</small>
                        </div>
                        <i class="bi bi-graph-up-arrow fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Gastos Hoy</h6>
                            <h2 class="mb-0">S/ @Model.TodayExpenses.ToString("N2")</h2>
                        </div>
                        <i class="bi bi-wallet2 fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Efectivo en Caja</h6>
                            <h2 class="mb-0">S/ @Model.AvailableCash.ToString("N2")</h2>
                        </div>
                        <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- KPIs Row 2 - Alerts -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-warning h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Stock Bajo</h6>
                            <h3 class="mb-0 text-warning">@Model.LowStockProducts</h3>
                            <small class="text-muted">productos</small>
                        </div>
                        <a asp-action="InventoryReport" class="btn btn-outline-warning">
                            <i class="bi bi-box-seam"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Ordenes Pendientes</h6>
                            <h3 class="mb-0 text-info">@Model.PendingPurchaseOrders</h3>
                            <small class="text-muted">ordenes</small>
                        </div>
                        <a asp-controller="PurchaseOrders" asp-action="Pending" class="btn btn-outline-info">
                            <i class="bi bi-truck"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Deuda Clientes</h6>
                            <h3 class="mb-0 text-danger">S/ @Model.TotalCustomerDebt.ToString("N2")</h3>
                            <small class="text-muted">@Model.CustomersWithDebt clientes</small>
                        </div>
                        <a asp-controller="Customers" asp-action="WithDebt" class="btn btn-outline-danger">
                            <i class="bi bi-people"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-secondary h-100">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-3">Acciones Rapidas</h6>
                    <div class="d-grid gap-2">
                        <a asp-controller="Sales" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-cart-plus me-1"></i>Nueva Venta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Top Products -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-star me-2"></i>Productos Mas Vendidos</h5>
                    <span class="text-muted">Ultimos 30 dias</span>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-end">Cantidad</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TopProducts.Any())
                            {
                                @foreach (var product in Model.TopProducts)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td class="text-end">@product.QuantitySold.ToString("N0")</td>
                                        <td class="text-end fw-semibold">S/ @product.TotalSales.ToString("N2")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-3">
                                        Sin datos disponibles
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Sales -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Ventas Recientes</h5>
                    <a asp-controller="Sales" asp-action="Today" class="btn btn-sm btn-outline-primary">Ver todas</a>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Ticket</th>
                                <th>Cliente</th>
                                <th class="text-end">Total</th>
                                <th>Hora</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentSales.Any())
                            {
                                @foreach (var sale in Model.RecentSales)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Sales" asp-action="Details" asp-route-id="@sale.Id"
                                               class="text-decoration-none">
                                                @sale.Number
                                            </a>
                                        </td>
                                        <td>@(sale.CustomerName ?? "Publico General")</td>
                                        <td class="text-end fw-semibold">S/ @sale.Total.ToString("N2")</td>
                                        <td>@sale.Date.ToString("HH:mm")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-3">
                                        No hay ventas recientes
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Links -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-bar-graph me-2"></i>Reportes</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a asp-action="SalesReport" class="card text-decoration-none mb-3 mb-md-0">
                                <div class="card-body text-center">
                                    <i class="bi bi-receipt fs-1 text-primary mb-2"></i>
                                    <h6>Reporte de Ventas</h6>
                                    <small class="text-muted">Analisis detallado de ventas</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="InventoryReport" class="card text-decoration-none mb-3 mb-md-0">
                                <div class="card-body text-center">
                                    <i class="bi bi-box-seam fs-1 text-warning mb-2"></i>
                                    <h6>Reporte de Inventario</h6>
                                    <small class="text-muted">Estado actual del inventario</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="ProfitabilityReport" class="card text-decoration-none">
                                <div class="card-body text-center">
                                    <i class="bi bi-graph-up fs-1 text-success mb-2"></i>
                                    <h6>Reporte de Rentabilidad</h6>
                                    <small class="text-muted">Margen y ganancia por producto</small>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        No hay datos disponibles para mostrar.
    </div>
}
