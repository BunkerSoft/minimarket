@model MerkaCentro.Application.Services.ProfitabilityReportDto
@{
    ViewData["Title"] = "Reporte de Rentabilidad";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-graph-up me-2"></i>Reporte de Rentabilidad
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Dashboard
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Desde</label>
                <input type="date" name="from" class="form-control" value="@ViewBag.From" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Hasta</label>
                <input type="date" name="to" class="form-control" value="@ViewBag.To" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">Generar Reporte</button>
            </div>
        </form>
    </div>
</div>

@if (Model != null)
{
    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h6 class="text-white-50">Ingresos</h6>
                    <h3 class="mb-0">S/ @Model.TotalRevenue.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h6 class="text-white-50">Costo</h6>
                    <h3 class="mb-0">S/ @Model.TotalCost.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h6 class="text-white-50">Ganancia Bruta</h6>
                    <h3 class="mb-0">S/ @Model.GrossProfit.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h6 class="text-white-50">Margen Bruto</h6>
                    <h3 class="mb-0">@Model.GrossMargin.ToString("N1")%</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Top Profitable Products -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-arrow-up-circle me-2"></i>Mas Rentables</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-end">Ingreso</th>
                                <th class="text-end">Ganancia</th>
                                <th class="text-end">Margen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.TopProfitableProducts)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td class="text-end">S/ @product.Revenue.ToString("N2")</td>
                                    <td class="text-end text-success fw-semibold">S/ @product.Profit.ToString("N2")</td>
                                    <td class="text-end">
                                        <span class="badge bg-success">@product.Margin.ToString("N1")%</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Low Profitable Products -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-arrow-down-circle me-2"></i>Menor Margen</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-end">Ingreso</th>
                                <th class="text-end">Ganancia</th>
                                <th class="text-end">Margen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.LowProfitableProducts)
                            {
                                var marginClass = product.Margin < 10 ? "bg-danger" : (product.Margin < 20 ? "bg-warning" : "bg-secondary");
                                <tr>
                                    <td>@product.Name</td>
                                    <td class="text-end">S/ @product.Revenue.ToString("N2")</td>
                                    <td class="text-end fw-semibold">S/ @product.Profit.ToString("N2")</td>
                                    <td class="text-end">
                                        <span class="badge @marginClass">@product.Margin.ToString("N1")%</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
