@model IEnumerable<MerkaCentro.Application.DTOs.ExpenseCategoryDto>
@{
    ViewData["Title"] = "Categorias de Gastos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-tags me-2"></i>Categorias de Gastos
    </h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left me-1"></i>Volver a Gastos
        </a>
        <a asp-action="CreateCategory" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Nueva Categoria
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th class="text-center">Gastos</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@category.Name</td>
                            <td>@(category.Description ?? "-")</td>
                            <td class="text-center">
                                <span class="badge bg-secondary">@category.ExpenseCount</span>
                            </td>
                            <td class="text-center">
                                @if (category.IsActive)
                                {
                                    <span class="badge bg-success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactiva</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-outline-secondary"
                                       title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (category.IsActive)
                                    {
                                        <form asp-action="DeactivateCategory" asp-route-id="@category.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-warning" title="Desactivar"
                                                    onclick="return confirm('¿Desactivar esta categoria?')">
                                                <i class="bi bi-pause"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="ActivateCategory" asp-route-id="@category.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-success" title="Activar">
                                                <i class="bi bi-play"></i>
                                            </button>
                                        </form>
                                    }
                                    @if (category.ExpenseCount == 0)
                                    {
                                        <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="Eliminar"
                                                    onclick="return confirm('¿Eliminar esta categoria?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            No hay categorias registradas
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
