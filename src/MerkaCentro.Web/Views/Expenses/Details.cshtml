@model MerkaCentro.Application.DTOs.ExpenseDto
@{
    ViewData["Title"] = "Detalle del Gasto";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-wallet2 me-2"></i>Detalle del Gasto
    </h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil me-1"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informacion del Gasto</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Descripcion</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Monto</dt>
                    <dd class="col-sm-8 text-danger fw-bold fs-4">S/ @Model.Amount.ToString("N2")</dd>

                    <dt class="col-sm-4">Categoria</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">@Model.CategoryName</span></dd>

                    <dt class="col-sm-4">Referencia</dt>
                    <dd class="col-sm-8">@(Model.Reference ?? "-")</dd>

                    <dt class="col-sm-4">Usuario</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    @if (Model.CashRegisterId.HasValue)
                    {
                        <dt class="col-sm-4">Caja</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">Descontado de caja</span>
                        </dd>
                    }

                    <dt class="col-sm-4">Fecha Registro</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-4">Ultima Modificacion</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-sticky me-2"></i>Notas</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Notes</p>
                </div>
            </div>
        }

        <div class="d-flex gap-2">
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Â¿Eliminar este gasto? Esta accion no se puede deshacer.')">
                    <i class="bi bi-trash me-1"></i>Eliminar
                </button>
            </form>
        </div>
    </div>
</div>
