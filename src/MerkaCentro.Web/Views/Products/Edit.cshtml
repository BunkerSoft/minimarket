@model MerkaCentro.Application.Services.UpdateProductDto
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-pencil me-2"></i>Editar Producto
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@ViewBag.ProductId" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Name" class="form-label">Nombre <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Barcode" class="form-label">Codigo de Barras</label>
                            <input asp-for="Barcode" class="form-control" />
                            <span asp-validation-for="Barcode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Descripcion</label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label">Categoria <span class="text-danger">*</span></label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="UnitOfMeasure" class="form-label">Unidad de Medida <span class="text-danger">*</span></label>
                            <select asp-for="UnitOfMeasure" class="form-select">
                                <option value="UND">Unidad (UND)</option>
                                <option value="KG">Kilogramo (KG)</option>
                                <option value="LT">Litro (LT)</option>
                                <option value="MT">Metro (MT)</option>
                                <option value="PAQ">Paquete (PAQ)</option>
                                <option value="CAJ">Caja (CAJ)</option>
                            </select>
                            <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PurchasePrice" class="form-label">Precio de Compra <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SalePrice" class="form-label">Precio de Venta <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input asp-for="SalePrice" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="SalePrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MinStock" class="form-label">Stock Minimo</label>
                        <input asp-for="MinStock" class="form-control" type="number" step="0.001" min="0" />
                        <span asp-validation-for="MinStock" class="text-danger"></span>
                    </div>

                    <hr />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
