@model IEnumerable<MerkaCentro.Application.DTOs.ProductDto>
@{
    ViewData["Title"] = "Productos con Stock Bajo";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-exclamation-triangle me-2"></i>Productos con Stock Bajo
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Ver Todos
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Hay <strong>@Model.Count()</strong> productos que necesitan reabastecimiento.
    </div>
}

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Producto</th>
                    <th>Categoria</th>
                    <th class="text-center">Stock Actual</th>
                    <th class="text-center">Stock Minimo</th>
                    <th class="text-center">Faltante</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var product in Model.OrderBy(p => p.CurrentStock))
                    {
                        var isOutOfStock = product.CurrentStock <= 0;
                        var shortage = product.MinStock - product.CurrentStock;
                        <tr class="@(isOutOfStock ? "table-danger" : "table-warning")">
                            <td><code>@product.Code</code></td>
                            <td>
                                <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none fw-semibold">
                                    @product.Name
                                </a>
                            </td>
                            <td>@product.CategoryName</td>
                            <td class="text-center">
                                <span class="@(isOutOfStock ? "stock-danger" : "stock-warning") fw-bold">
                                    @product.CurrentStock.ToString("N2")
                                </span>
                            </td>
                            <td class="text-center">@product.MinStock.ToString("N2")</td>
                            <td class="text-center">
                                @if (shortage > 0)
                                {
                                    <span class="badge bg-danger">-@shortage.ToString("N2")</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">0</span>
                                }
                            </td>
                            <td class="table-actions text-center">
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-warning" title="Ajustar Stock">
                                    <i class="bi bi-arrow-repeat"></i> Ajustar
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <i class="bi bi-check-circle fs-1 d-block mb-2 text-success"></i>
                            Todos los productos tienen stock suficiente
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
