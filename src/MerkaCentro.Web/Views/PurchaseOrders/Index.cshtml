@model MerkaCentro.Application.Common.PagedResult<MerkaCentro.Application.DTOs.PurchaseOrderDto>
@using MerkaCentro.Domain.Enums
@{
    ViewData["Title"] = "Ordenes de Compra";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-box-seam me-2"></i>Ordenes de Compra
    </h1>
    <div>
        <a asp-action="Pending" class="btn btn-outline-warning me-2">
            <i class="bi bi-hourglass-split me-1"></i>Pendientes
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Nueva Orden
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Estado</label>
                <select name="status" class="form-select" onchange="this.form.submit()">
                    <option value="">Todos</option>
                    @foreach (var status in (SelectList)ViewBag.Statuses)
                    {
                        <option value="@status.Value" selected="@status.Selected">@status.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Numero</th>
                    <th>Proveedor</th>
                    <th>Usuario</th>
                    <th class="text-end">Total</th>
                    <th class="text-center">Estado</th>
                    <th>Fecha</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Items.Any())
                {
                    @foreach (var order in Model.Items)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="text-decoration-none fw-semibold">
                                    @order.Number
                                </a>
                            </td>
                            <td>@order.SupplierName</td>
                            <td>@order.UserName</td>
                            <td class="text-end fw-semibold">S/ @order.Total.ToString("N2")</td>
                            <td class="text-center">
                                @switch (order.Status)
                                {
                                    case PurchaseOrderStatus.Pending:
                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                        break;
                                    case PurchaseOrderStatus.PartiallyReceived:
                                        <span class="badge bg-info">Parcial</span>
                                        break;
                                    case PurchaseOrderStatus.Received:
                                        <span class="badge bg-success">Recibida</span>
                                        break;
                                    case PurchaseOrderStatus.Cancelled:
                                        <span class="badge bg-secondary">Cancelada</span>
                                        break;
                                }
                            </td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-secondary"
                                       title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (order.Status == PurchaseOrderStatus.Pending || order.Status == PurchaseOrderStatus.PartiallyReceived)
                                    {
                                        <a asp-action="Receive" asp-route-id="@order.Id" class="btn btn-outline-success"
                                           title="Recibir mercancia">
                                            <i class="bi bi-box-arrow-in-down"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            No se encontraron ordenes de compra
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model != null && Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-status="@ViewBag.SelectedStatus">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-status="@ViewBag.SelectedStatus">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-status="@ViewBag.SelectedStatus">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
}
