@model IEnumerable<MerkaCentro.Application.DTOs.PurchaseOrderDto>
@using MerkaCentro.Domain.Enums
@{
    ViewData["Title"] = "Ordenes Pendientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-hourglass-split me-2"></i>Ordenes Pendientes
    </h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary me-2">
            <i class="bi bi-list me-1"></i>Ver Todas
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Nueva Orden
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Numero</th>
                    <th>Proveedor</th>
                    <th class="text-end">Total</th>
                    <th class="text-center">Estado</th>
                    <th>Fecha</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="text-decoration-none fw-semibold">
                                    @order.Number
                                </a>
                            </td>
                            <td>@order.SupplierName</td>
                            <td class="text-end fw-semibold">S/ @order.Total.ToString("N2")</td>
                            <td class="text-center">
                                @if (order.Status == PurchaseOrderStatus.PartiallyReceived)
                                {
                                    <span class="badge bg-info">Parcial</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                }
                            </td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Receive" asp-route-id="@order.Id" class="btn btn-success btn-sm">
                                    <i class="bi bi-box-arrow-in-down me-1"></i>Recibir
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">
                            <i class="bi bi-check-circle fs-1 d-block mb-2 text-success"></i>
                            No hay ordenes pendientes
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
