@model MerkaCentro.Application.DTOs.PurchaseOrderDto
@{
    ViewData["Title"] = $"Recibir Orden {Model.Number}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-box-arrow-in-down me-2"></i>Recibir Mercancia
    </h1>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="alert alert-info mb-4">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Orden @Model.Number</strong> - Proveedor: @Model.SupplierName
</div>

<form asp-action="Receive" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Items a Recibir</h5>
        </div>
        <div class="card-body p-0">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th class="text-end">Ordenado</th>
                        <th class="text-end">Recibido</th>
                        <th class="text-end">Pendiente</th>
                        <th style="width: 150px">Cantidad a Recibir</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Items.Count; i++)
                    {
                        var item = Model.Items[i];
                        <tr>
                            <td>
                                @item.ProductName
                                <input type="hidden" name="items[@i].ProductId" value="@item.ProductId" />
                            </td>
                            <td class="text-end">@item.Quantity.ToString("N0")</td>
                            <td class="text-end">
                                @if (item.ReceivedQuantity > 0)
                                {
                                    <span class="text-success">@item.ReceivedQuantity.ToString("N0")</span>
                                }
                                else
                                {
                                    <span>0</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (item.PendingQuantity > 0)
                                {
                                    <span class="text-warning fw-semibold">@item.PendingQuantity.ToString("N0")</span>
                                }
                                else
                                {
                                    <span class="text-success"><i class="bi bi-check"></i> Completo</span>
                                }
                            </td>
                            <td>
                                @if (item.PendingQuantity > 0)
                                {
                                    <input type="number" name="items[@i].ReceivedQuantity" class="form-control"
                                           value="@item.PendingQuantity" min="0" max="@item.PendingQuantity" step="1" />
                                }
                                else
                                {
                                    <input type="number" name="items[@i].ReceivedQuantity" class="form-control" value="0" disabled />
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancelar</a>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-lg me-1"></i>Confirmar Recepcion
        </button>
    </div>
</form>
