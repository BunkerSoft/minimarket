@model MerkaCentro.Application.DTOs.SaleDto
@{
    ViewData["Title"] = $"Venta {Model?.Number}";
    var statusClass = Model?.Status == MerkaCentro.Domain.Enums.SaleStatus.Completed ? "bg-success" :
                      Model?.Status == MerkaCentro.Domain.Enums.SaleStatus.Cancelled ? "bg-danger" : "bg-secondary";
    var statusText = Model?.Status == MerkaCentro.Domain.Enums.SaleStatus.Completed ? "Completada" :
                     Model?.Status == MerkaCentro.Domain.Enums.SaleStatus.Cancelled ? "Cancelada" : "Pendiente";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-receipt me-2"></i>Venta @Model?.Number
        <span class="badge @statusClass ms-2">@statusText</span>
    </h1>
    <div>
        @if (Model?.Status == MerkaCentro.Domain.Enums.SaleStatus.Completed)
        {
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                <i class="bi bi-x-circle me-1"></i>Anular
            </button>
        }
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-cart me-2"></i>Detalle de Productos
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">P. Unitario</th>
                                <th class="text-end">Descuento</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td class="text-center">@item.Quantity.ToString("N2")</td>
                                    <td class="text-end">S/ @item.UnitPrice.ToString("N2")</td>
                                    <td class="text-end">
                                        @if (item.Discount > 0)
                                        {
                                            <span class="text-danger">-S/ @item.Discount.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end fw-bold">S/ @item.Total.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end">Subtotal:</td>
                                <td class="text-end">S/ @Model.Subtotal.ToString("N2")</td>
                            </tr>
                            @if (Model.Discount > 0)
                            {
                                <tr class="text-danger">
                                    <td colspan="4" class="text-end">Descuento:</td>
                                    <td class="text-end">-S/ @Model.Discount.ToString("N2")</td>
                                </tr>
                            }
                            @if (Model.Tax > 0)
                            {
                                <tr>
                                    <td colspan="4" class="text-end">IGV:</td>
                                    <td class="text-end">S/ @Model.Tax.ToString("N2")</td>
                                </tr>
                            }
                            <tr class="table-primary fw-bold fs-5">
                                <td colspan="4" class="text-end">TOTAL:</td>
                                <td class="text-end">S/ @Model.Total.ToString("N2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            @if (Model.Payments.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-cash-stack me-2"></i>Pagos
                    </div>
                    <div class="card-body p-0">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>Metodo</th>
                                    <th>Referencia</th>
                                    <th class="text-end">Monto</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td>
                                            @switch (payment.Method)
                                            {
                                                case MerkaCentro.Domain.Enums.PaymentMethod.Cash:
                                                    <span class="badge bg-success">Efectivo</span>
                                                    break;
                                                case MerkaCentro.Domain.Enums.PaymentMethod.Card:
                                                    <span class="badge bg-primary">Tarjeta</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@payment.Method</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@(payment.Reference ?? "-")</td>
                                        <td class="text-end fw-bold">S/ @payment.Amount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2" class="text-end">Total Pagado:</td>
                                    <td class="text-end fw-bold">S/ @Model.AmountPaid.ToString("N2")</td>
                                </tr>
                                @if (Model.Change > 0)
                                {
                                    <tr class="text-success">
                                        <td colspan="2" class="text-end">Vuelto:</td>
                                        <td class="text-end">S/ @Model.Change.ToString("N2")</td>
                                    </tr>
                                }
                            </tfoot>
                        </table>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Informacion
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Numero de Venta</dt>
                        <dd><code class="fs-5">@Model.Number</code></dd>

                        <dt>Fecha y Hora</dt>
                        <dd>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                        <dt>Cliente</dt>
                        <dd>@(Model.CustomerName ?? "Venta general")</dd>

                        <dt>Atendido por</dt>
                        <dd>@Model.UserName</dd>

                        <dt>Tipo de Pago</dt>
                        <dd>
                            @if (Model.IsCredit)
                            {
                                <span class="badge bg-warning">Credito</span>
                            }
                            else
                            {
                                <span class="badge bg-success">@Model.PaymentMethod</span>
                            }
                        </dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <dt>Notas</dt>
                        <dd class="text-muted">@Model.Notes</dd>
                    }
                </div>
            </div>

            <div class="card text-center @(Model.IsCredit ? "bg-warning" : "bg-success") text-white">
                <div class="card-body">
                    <h6 class="card-title">Total de la Venta</h6>
                    <div class="display-5 fw-bold">S/ @Model.Total.ToString("N2")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cancel Modal -->
    <div class="modal fade" id="cancelModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Anular Venta</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="Cancel" asp-route-id="@Model.Id" method="post">
                    <div class="modal-body">
                        <p>Esta accion anulara la venta y devolvera los productos al inventario.</p>
                        <div class="mb-3">
                            <label class="form-label">Razon de anulacion <span class="text-danger">*</span></label>
                            <textarea name="reason" class="form-control" rows="3" required
                                      placeholder="Ingrese la razon de anulacion..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-x-circle me-1"></i>Anular Venta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
