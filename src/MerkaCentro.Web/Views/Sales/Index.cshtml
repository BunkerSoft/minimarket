@model MerkaCentro.Application.Common.PagedResult<MerkaCentro.Application.DTOs.SaleDto>
@{
    ViewData["Title"] = "Ventas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">
        <i class="bi bi-cart me-2"></i>Ventas
    </h1>
    <div>
        <a asp-action="Today" class="btn btn-outline-primary me-2">
            <i class="bi bi-calendar-day me-1"></i>Hoy
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-cart-plus me-1"></i>Nueva Venta
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Desde</label>
                <input type="date" name="from" class="form-control" value="@ViewBag.FromDate" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Hasta</label>
                <input type="date" name="to" class="form-control" value="@ViewBag.ToDate" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Numero</th>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th class="text-end">Total</th>
                    <th class="text-center">Pago</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Items.Any())
                {
                    @foreach (var sale in Model.Items)
                    {
                        <tr>
                            <td><code>@sale.Number</code></td>
                            <td>@sale.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(sale.CustomerName ?? "Venta general")</td>
                            <td class="text-end price fw-bold">S/ @sale.Total.ToString("N2")</td>
                            <td class="text-center">
                                @if (sale.IsCredit)
                                {
                                    <span class="badge bg-warning">Credito</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@sale.PaymentMethod</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (sale.Status == MerkaCentro.Domain.Enums.SaleStatus.Completed)
                                {
                                    <span class="badge bg-success">Completada</span>
                                }
                                else if (sale.Status == MerkaCentro.Domain.Enums.SaleStatus.Cancelled)
                                {
                                    <span class="badge bg-danger">Cancelada</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pendiente</span>
                                }
                            </td>
                            <td class="table-actions text-center">
                                <a asp-action="Details" asp-route-id="@sale.Id" class="btn btn-sm btn-outline-info" title="Ver">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <i class="bi bi-cart fs-1 d-block mb-2"></i>
                            No hay ventas registradas
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="card-footer">
            <nav>
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-route-page="@(Model.PageNumber - 1)">Anterior</a>
                    </li>
                    @for (int i = 1; i <= Math.Min(Model.TotalPages, 5); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-route-page="@(Model.PageNumber + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
