<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS MerkaCentro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Dashboard" asp-action="Index">
                    <img src="~/Logo.jpeg" alt="MerkaCentro" style="height: 40px; border-radius: 6px;" class="me-2" />                  
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-box-seam"></i> Inventario
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">Productos</a></li>
                                    <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Categorias</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Products" asp-action="LowStock">Stock Bajo</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-cart3"></i> Ventas
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="Create"><i class="bi bi-plus-lg me-1"></i>Nueva Venta</a></li>
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="Today">Ventas de Hoy</a></li>
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="Index">Todas las Ventas</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Customers" asp-action="Index">
                                    <i class="bi bi-people"></i> Clientes
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-cash-stack"></i> Caja
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="CashRegister" asp-action="Current">Caja Actual</a></li>
                                    <li><a class="dropdown-item" asp-controller="CashRegister" asp-action="Index">Historial</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Expenses" asp-action="Index">Gastos</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-truck"></i> Compras
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Suppliers" asp-action="Index">Proveedores</a></li>
                                    <li><a class="dropdown-item" asp-controller="PurchaseOrders" asp-action="Index">Ordenes de Compra</a></li>
                                    <li><a class="dropdown-item" asp-controller="PurchaseOrders" asp-action="Pending">Pendientes</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Alerts" asp-action="Index">
                                    <i class="bi bi-bell"></i>
                                    <span id="alertBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">
                                        0
                                    </span>
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"><i class="bi bi-people me-1"></i>Usuarios</a></li>
                                        <li><a class="dropdown-item" asp-controller="Audit" asp-action="Index"><i class="bi bi-journal-text me-1"></i>Auditoria</a></li>
                                        <li><a class="dropdown-item" asp-controller="Backup" asp-action="Index"><i class="bi bi-hdd me-1"></i>Backups</a></li>
                                    </ul>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                    @User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <span class="dropdown-item-text text-muted">
                                            <small>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword"><i class="bi bi-key me-1"></i>Cambiar Contrase√±a</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-1"></i>Cerrar Sesion
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main class="content-wrapper">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2026 - POS MerkaCentro
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script>
            // Load alert count
            function loadAlertCount() {
                fetch('/Alerts/GetCount')
                    .then(r => r.json())
                    .then(data => {
                        const badge = document.getElementById('alertBadge');
                        if (data.count > 0) {
                            badge.textContent = data.count > 99 ? '99+' : data.count;
                            badge.classList.remove('d-none');
                        } else {
                            badge.classList.add('d-none');
                        }
                    })
                    .catch(() => {});
            }
            loadAlertCount();
            setInterval(loadAlertCount, 60000); // Refresh every minute
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
